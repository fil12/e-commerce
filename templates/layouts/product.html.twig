<div class="col-md-3 col-sm-6 produtItem ">
    <div class="product-grid">
        <div class="product-image">
            <a href="#">
                <img class="pic-1" src="{{ product.productImages()[0].name ??  asset('images/default.jpg') }} ">
                <img class="pic-2" src="{{ product.productImages()[1].name ??  asset('images/default.jpg') }}">
            </a>
            <ul class="social">
                <li><a href="/category/{{ product.getCategories()[0].slug }}/{{ product.id }}" data-tip="Quick View"><i class="fa fa-search"></i></a></li>
                {#<li><a href="" data-tip="Add to Wishlist"><i class="fa fa-shopping-bag"></i></a></li>#}
                <li><span data-id="{{ product.id }}" class="cart-in-soc cart-in" data-tip="Add to Cart"><i class="fa fa-shopping-cart"></i></span></li>
            </ul>
            <span class="product-new-label">Sale</span>
            <span class="product-discount-label">20%</span>
        </div>
        <ul class="rating">
            <li class="fa fa-star"></li>
            <li class="fa fa-star"></li>
            <li class="fa fa-star"></li>
            <li class="fa fa-star"></li>
            <li class="fa fa-star disable"></li>
        </ul>
        <div class="product-content">
            <h3 class="title"><a href="#">{{ product.title }}</a></h3>
            <div class="price">${{ product.price }}
            </div>
            <a href="/category/{{ product.getCategories()[0].slug }}/{{ product.id }}" data-id="{{ product.id }}" class="cart-in btn btn-success btn-sm">
                View Details
            </a>
        </div>
    </div>
</div>