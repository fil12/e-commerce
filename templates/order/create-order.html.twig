{% extends 'base.html.twig' %}

{%  block title %}Create customer{% endblock %}

{% block main %}
    <main role="main">
        <div class="col-lg-6 wrap offset-3">
            <h2 class="text-primary">Please enter your data.</h2>

            {{ form_start(form) }}
            <div class="form-group">
                <label for="name">Choose the shipping method</label>
                {{ form_widget(form.shipping_method, {'attr': {'class': 'form-control'}}) }}
            </div>
            <div class="form-group">
                <label for="message">Your Comment</label>
                {{ form_widget(form.comment, {'attr': {'class': 'form-control', 'cols': 30, 'rows': 5}}) }}
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-primary">Order</button>
            </div>
            {{ form_end(form) }}
        </div>

    </main>
{% endblock %}